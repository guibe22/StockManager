            <RadzenDataGridColumn TItem="string" Title="Total" />
            <RadzenDataGridColumn TItem="string" Title="Fecha"  FormatString="{0:d}"/>
        </Columns> 
        </RadzenDataGrid>  
          
    </RadzenStack>


 </RadzenCard>


