@page "/C_Ventas"

<RadzenCard Class="rz-my-auto rz-mx-auto bordes" style="background-image: linear-gradient(100deg, #6b6e73cc 30%, #568aebbf 100%);">
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="0" Class="rz-p-0">   
                 <RadzenLabel Text="CONSULTA DE VENTAS" Style=" font-size: 25px; font-weight: bold; margin-bottom: 10px; color:white;" />
    </RadzenStack>
